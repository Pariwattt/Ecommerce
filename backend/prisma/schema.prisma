datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
    id     Int    @id @default(autoincrement())
    name   String
    price  Float
    code   String  @unique
    type   Type    @relation(fields: [typeId], references: [typeID])
    typeId String  @default("defaultTypeId") // กำหนดค่าเริ่มต้นให้กับ typeId
    image  String?
}


model Type {
    id       Int       @id @default(autoincrement())
    type     String    @unique
    typeID   String    @unique
    products Product[]
}
